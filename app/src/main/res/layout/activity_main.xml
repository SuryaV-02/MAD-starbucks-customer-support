<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:paddingHorizontal="50dp"
            android:gravity="center"
            android:src="@drawable/starbucks_logo"
            />

        <EditText
            android:id="@+id/et_mobile"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/box_bg"
            android:hint="Enter Regional Mobile no"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:singleLine="true"
            android:textColor="@color/text_color"
            android:textColorHint="@color/hint_color"
            android:textSize="18dp" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/content_Textinput"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            app:boxBackgroundMode="none"
            app:boxStrokeErrorColor="#FF0000"
            app:hintEnabled="false">

            <EditText
                android:id="@+id/et_content"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:background="@drawable/box_bg"
                android:gravity="start"
                android:hint="Enter Your issue here"
                android:inputType="textMultiLine"
                android:paddingVertical="12dp"
                android:scrollHorizontally="false"
                android:textColor="@color/text_color"
                android:textColorHint="@color/hint_color"
                android:textSize="18dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_sendno"
            android:layout_width="308dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Send Message"
            android:textAllCaps="false"
            android:textColor="@color/text_color_Btn"
            android:textSize="18dp"
            app:backgroundTint="#017143"
            app:cornerRadius="12dp"
            app:rippleColor="@color/hint_color" />
    </LinearLayout>

</LinearLayout>